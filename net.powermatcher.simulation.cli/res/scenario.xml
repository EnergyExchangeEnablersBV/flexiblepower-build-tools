<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<scenario>
    <timing_descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="asFastAsPossibleSimulationClockDescriptor">
        <start>1970-01-01T01:00:00+01:00</start>
        <timestep_interval_millis>30000</timestep_interval_millis>
    </timing_descriptor>
    <market_basis>
        <commodity>electricity</commodity>
        <currency>EUR</currency>
        <maximum_price>50.0</maximum_price>
        <minimum_price>0.0</minimum_price>
        <price_steps>50</price_steps>
    </market_basis>
    <data_sinks>
        <csv_data_sink sink_id="csv">
            <data>
                <data_descriptor agent_id="Auctioneer-0" cluster_id="cluster1" type="PRICE"/>
                <data_descriptor agent_id="Concentrator-0" cluster_id="cluster1" type="BID"/>
            </data>
            <output_file>c:\Data\powermatcher.csv</output_file>
        </csv_data_sink>
    </data_sinks>
    <clusters>
        <cluster id="cluster1">
            <root xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="auctioneerNodeDescriptor">
                <component>net.powermatcher.core.agent.auctioneer.Auctioneer</component>
                <configuration>
                    <property name="id">Auctioneer-0</property>
                    <property name="cluster.id">cluster1</property>
                </configuration>
                <concentrator>
                    <component>net.powermatcher.core.agent.concentrator.Concentrator</component>
                    <configuration>
                        <property name="id">Concentrator-0</property>
                        <property name="cluster.id">cluster1</property>
                    </configuration>
                    <device_agent>
                        <component>net.powermatcher.simulation.testagents.VariableDeviceAgent</component>
                        <configuration>
                            <property name="id">DeviceAgent-0.0</property>
                            <property name="cluster.id">cluster1</property>
                        </configuration>
                    </device_agent>
                    <device_agent>
                        <component>net.powermatcher.simulation.testagents.VariableDeviceAgent</component>
                        <configuration>
                            <property name="id">DeviceAgent-0.1</property>
                            <property name="cluster.id">cluster1</property>
                        </configuration>
                    </device_agent>
                    <device_agent>
                        <component>net.powermatcher.simulation.testagents.RandomMustRunDeviceAgent</component>
                        <configuration>
                            <property name="id">DeviceAgent-0.04</property>
                            <property name="cluster.id">cluster1</property>
                        </configuration>
                    </device_agent>
                    <device_agent>
                        <component>net.powermatcher.simulation.testagents.RandomMustRunDeviceAgent</component>
                        <configuration>
                            <property name="id">DeviceAgent-0.14</property>
                            <property name="cluster.id">cluster1</property>
                        </configuration>
                    </device_agent>
                </concentrator>
                <concentrator>
                    <component>net.powermatcher.core.agent.concentrator.Concentrator</component>
                    <configuration>
                        <property name="id">Concentrator-1</property>
                        <property name="cluster.id">cluster1</property>
                    </configuration>
                    <device_agent>
                        <component>net.powermatcher.simulation.testagents.VariableDeviceAgent</component>
                        <configuration>
                            <property name="id">DeviceAgent-1.0</property>
                            <property name="cluster.id">cluster1</property>
                        </configuration>
                    </device_agent>
                    <device_agent>
                        <component>net.powermatcher.simulation.testagents.VariableDeviceAgent</component>
                        <configuration>
                            <property name="id">DeviceAgent-1.1</property>
                            <property name="cluster.id">cluster1</property>
                        </configuration>
                    </device_agent>
                    <device_agent>
                        <component>net.powermatcher.simulation.testagents.RandomMustRunDeviceAgent</component>
                        <configuration>
                            <property name="id">DeviceAgent-1.04</property>
                            <property name="cluster.id">cluster1</property>
                        </configuration>
                    </device_agent>
                    <device_agent>
                        <component>net.powermatcher.simulation.testagents.RandomMustRunDeviceAgent</component>
                        <configuration>
                            <property name="id">DeviceAgent-1.14</property>
                            <property name="cluster.id">cluster1</property>
                        </configuration>
                    </device_agent>
                </concentrator>
            </root>
        </cluster>
    </clusters>
</scenario>
